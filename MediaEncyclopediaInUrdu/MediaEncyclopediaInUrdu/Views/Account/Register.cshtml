      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

</head>
<body style="background-color:#ffffff;color: #00B4CC;">
    <!--------------- Login ----------------->
    <div class="col-md-3"></div>
    <div class="col-md-6" margin-left:30px style=";border-style:solid;border-color: #00B4CC">
        <font face="Blackadder ITC"><h1 align="center">رجسٹريشن فارم</h1></font>
        <br />

        <form style="text-align:right;">
            <div class="form-group">
                <div class="col-md-4" style="float:right;">
                    <label for="pwd">:نام</label>
                </div>
                <input style="text-align:right;" type="password" class="form-control" id="pwd" placeholder="نام کا اندراج کريں">
            </div>
            <div class="form-group">
                <div class="col-md-4" style="float:right;">
                    <label for="pwd">:ايڈريس</label>
                </div>
                <input style="text-align:right;" type="password" class="form-control" id="pwd" placeholder="ايڈريس کا اندراج کريں">
            </div>
            <div class="form-group">
                <div class="col-md-4" style="float:right;">
                    <label for="pwd">:ملک</label>
                </div>
                <input style="text-align:right;" type="password" class="form-control" id="pwd" placeholder="ملک کے نام کا اندراج کريں">
            </div>
            <div class="form-group">
                <div class="col-md-4" style="float:right;">
                    <label for="pwd">:ای ميل آئ ڈی</label>
                </div>
                <input style="text-align:right;" type="password" class="form-control" id="pwd" placeholder="ای ميل آئ ڈی کا اندراج کريں">
            </div>
            <div class="form-group">
                <div class="col-md-4" style="float:right;">
                    <label for="pwd">:ٹيلیفون نمبر</label>
                </div>
                <input style="text-align:right;" type="password" class="form-control" id="pwd" placeholder="ٹيلیفون نمبر کا اندراج کريں">
            </div>
            <div class="form-group">
                <div class="col-md-4" style="float:right;">
                    <label>حیثیت منتخب کریں</label>
                </div>
                <label><input type="radio" name="gender">ڈاکٹر</label>
                <label><input type="radio" name="gender">عام صارف</label>
            </div>
            <div class="form-group">
                <div class="col-md-4" style="float:right;">
                    <label for="pwd">:لائسنس نمبر</label>
                </div>
                <input style="text-align:right;" type="password" class="form-control" id="pwd" placeholder="لائسنس نمبر کا اندراج کريں">
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4"><button style="background-color:#00B4CC ; text-color: #ffff;">@Html.ActionLink("آئ ڈی بھیجیں","HomePage", "Home")</button><br><br></div>
            <div class="col-md-4"></div>

        </form>
        <br><br>
    </div>
</body>
</html>