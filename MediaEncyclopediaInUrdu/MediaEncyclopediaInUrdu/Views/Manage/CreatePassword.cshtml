@model MediaEncyclopediaInUrdu.Models.CreatePassword

@{
    Layout = "~/Views/Shared/HomePageLayout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-2" style="float:right">
                @Html.LabelFor(Model => Model.Email, new { style = "margin-left:30px" })
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "text-align:right; ", @placeholder = "نام کا اندراج کريں" })
            </div>

        </div>    
        <div class="form-group">
            <div class="col-md-2" style="float:right">
                @Html.LabelFor(Model => Model.NewPassword, new { style = "margin-left:30px" })
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @style = "text-align:right; ", @placeholder = "نام کا اندراج کريں" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2" style="float:right">
                @Html.LabelFor(Model => Model.ConfirmPassword, new { style = "margin-left:30px" })
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "text-align:right; ", @placeholder = "نام کا اندراج کريں" })
            </div>
        </div>

        <div class="col-md-4">
            <button style="background-color:#00B4CC ; margin-left:450px; text-color: #ffff;" placeholder="پاسورڈ بھیجیں" value="پاسورڈ بھیجیں">پاسورڈ بھیجیں</button> <br /><br />
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
    </div>
}
