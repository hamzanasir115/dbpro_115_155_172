@model MediaEncyclopediaInUrdu.Models.Password

@{
    Layout = "~/Views/Shared/PasswordLayout.cshtml";
}

@using (Html.BeginForm())
{
    <body style="background-color:#ffffff;color: #00B4CC;">
        @Html.AntiForgeryToken()
        <br /><br /><br /><br /><br /><br />
        <div class="col-md-3"></div>
        <div class="col-md-6" margin-left:30px style=";border-style:solid;border-color: #00B4CC">
            <font face="Blackadder ITC"><h1 align="center">رجسٹريشن فارم</h1></font>
            <br />

            <form style="text-align:right;">
                <div class="form-group">
                    <div class="col-md-2" style="float:right;">
                        @Html.LabelFor(model => model.OldPassword, new { style = "margin-left:-8px" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control", @style = "text-align:right; ", @placeholder = "نام کا اندراج کريں" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2" style="float:right;">
                        @Html.LabelFor(model => model.NewPassword, new { style = "margin-left:-8px" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", @style = "text-align:right; ", @placeholder = "نام کا اندراج کريں" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3" style="float:right;">
                        @Html.LabelFor(model => model.ConfirmPassword, new { style = "margin-left:-8px" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @style = "text-align:right; ", @placeholder = "نام کا اندراج کريں" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4" style="align-content:center">
                    <input style="background-color:#00B4CC ; color: #ffff; font-size:30px" value="رجسٹر" type="submit"><br><br>
                </div>


            </form>
        </div>
    </body>

}

