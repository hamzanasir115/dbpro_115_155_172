@model MediaEncyclopediaInUrdu.Treatment

@{
    Layout = "~/Views/Shared/TreatmentLayout.cshtml";
}

@using (Html.BeginForm())
{
    <section class="event-form" style="background-color:#ffffff">
        <div class="container" style="background-color:#ffffff">
            <br><br><h2>@ViewBag.Title</h2><br><br>
            <form class="form-horizontal" action="/action_page.php">

                @Html.AntiForgeryToken()
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.DiseaseID)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DiseaseID)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CategoryID)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CategoryID)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TreatmentName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TreatmentName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Detail)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Detail)
                        </dd>

                    </dl>

                    <div class="form-group">
                        <div class="col-md-4"></div>
                        <div class="col-md-4"><input style="background-color:#00B4CC ; font-size:30px" value="اخراج" type="submit" , onclick="return confirm('اخراج چا ھتے ھیں؟') ;" /> <br> <br></div>
                        <div class="col-md-4"></div>
                    </div>

                </div>
            </form>
        </div>
    </section>

}

